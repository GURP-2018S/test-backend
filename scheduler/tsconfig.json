{
  "compilerOptions": {
    "target": "es6",
    "lib": ["ES2017.object", "es6", "es2015.symbol", "es2015.iterable"],
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["./node_modules/*", "./packages/selenium-ide/packages/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
